<div class="main">
  <div class="sign-up group">
    <form class="sign-up-form" action="<%= session_url %>" method="post">
      <h1>Sign in</h1>
      <label>Username
        <input
        type="text"
        name="user[username]">
      </label>

      <br>

      <label>Password
        <input
        type="password"
        name="user[password]">
      </label>

      <br>

      <button>Sign In To Kelp</button>
      <div class="user-link">
        <%= link_to "Don't have an account? Sign up here.", new_user_url %>
      </div>
    </form>
    <div class="sign-up-content">
      <img src="http://www.herbalremediesinfo.com/images/kelp.jpg"/>
    </div>
  </div>
</div>
